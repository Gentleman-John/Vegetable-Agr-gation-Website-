
import os
import requests
from datetime import datetime

API_KEY = os.getenv("OPENWEATHER_API_KEY")

def get_maseno_weather():
    """Fetches weather data for Maseno, Kenya from OpenWeatherMap API."""
    base_url = "http://api.openweathermap.org/data/2.5/weather?"
    lat = "0.0075"
    lon = "34.5975"
    complete_url = f"{base_url}appid={API_KEY}&lat={lat}&lon={lon}&units=metric"
    response = requests.get(complete_url)
    if response.status_code == 200:
        return response.json()
    elif response.status_code == 401:
        print("Error: Invalid API key. Please check your OpenWeatherMap API key.")
        return None
    else:
        print(f"Error: API request failed with status code {response.status_code}")
        return None

def analyze_weather(data):
    """Analyzes weather data and generates insights."""
    if not data:
        return
    
    temp = data['main']['temp']
    humidity = data['main']['humidity']
    wind_speed = data['wind']['speed']
    description = data['weather'][0]['description']
    
    print("\n=== Weather Insights for Maseno ===")
    print(f"Current Conditions: {description}")
    print(f"Temperature: {temp}Â°C")
    
    # Temperature analysis
    if temp > 30:
        print("â˜€ï¸ Very hot conditions - suitable for heat-resistant crops")
    elif temp > 25:
        print("ğŸŒ¤ï¸ Warm conditions - good for most crops")
    elif temp > 20:
        print("ğŸŒ¥ï¸ Mild conditions - ideal for sensitive plants")
    else:
        print("â„ï¸ Cool conditions - monitor frost-sensitive crops")
    
    # Humidity analysis
    print(f"\nHumidity: {humidity}%")
    if humidity > 80:
        print("ğŸ’§ High humidity - watch for fungal diseases")
    elif humidity < 40:
        print("ğŸœï¸ Low humidity - increase irrigation")
    else:
        print("âœ… Optimal humidity range")
    
    # Wind analysis
    print(f"\nWind Speed: {wind_speed} m/s")
    if wind_speed > 10:
        print("ğŸŒªï¸ Strong winds - protect delicate crops")
    elif wind_speed > 5:
        print("ğŸƒ Moderate winds - good ventilation")
    else:
        print("ğŸ˜Š Light winds - ideal conditions")

if __name__ == "__main__":
    weather_data = get_maseno_weather()
    if weather_data:
        analyze_weather(weather_data)
    else:
        print("Error fetching weather data.")
